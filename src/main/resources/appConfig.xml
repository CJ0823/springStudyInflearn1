<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="creatureService" class="hello.core.creature.CreatureServiceImpl">
        <constructor-arg name="creatureRepository" ref="creatureRepository"></constructor-arg>
    </bean>

    <bean id="creatureRepository" class="hello.core.creature.CreatureRepositoryAnimals"></bean>

</beans>